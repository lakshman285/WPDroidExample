<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/category_item_layout">

        <View
            android:id="@+id/category_image_text"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textSize="25sp"
            android:layout_margin="@dimen/default_margin_half"
            android:background="@drawable/rounded_view"
            android:textStyle="bold" />

        <View
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/default_margin_half"
            android:background="@color/light_transparent"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/category_image_text"
            android:id="@+id/category_name"
            android:layout_toEndOf="@+id/category_image_text"
            android:layout_marginLeft="@dimen/default_margin_half" />
        <View
            android:layout_width="100dp"
            android:layout_height="17dp"
            android:textSize="16sp"
            android:layout_marginStart="@dimen/default_margin_half"
            android:background="@color/light_transparent"
            android:layout_toRightOf="@+id/category_image_text"
            android:layout_below="@+id/category_name"
            android:id="@+id/category_count"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/category_image_text"
            android:layout_marginLeft="@dimen/default_margin_half" />

</RelativeLayout>