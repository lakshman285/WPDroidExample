<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:id="@+id/view_top_layout"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view_text_layout"
            android:layout_toRightOf="@+id/view_image_layout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/view_image_layout">

            <View
                android:id="@+id/textone"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:background="@color/light_transparent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>

            <View
                android:id="@+id/texttwo"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:background="@color/light_transparent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"/>

            <View
                android:id="@+id/textthree"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:background="@color/light_transparent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/view_image_layout"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/img_news"
                android:layout_width="85dp"
                android:layout_height="80dp"
                android:background="@color/light_transparent"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginStart="@dimen/default_margin_half"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/view_top_layout"
        android:id="@+id/view_bottom_layout"
        android:layout_marginRight="25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="150dp"
                android:layout_height="16dp"
                android:layout_marginBottom="4dp"
                android:background="@color/light_transparent"/>
            <View
                android:layout_width="150dp"
                android:layout_height="16dp"
                android:background="@color/light_transparent"/>

        </LinearLayout>

        <View
            android:id="@+id/bookmark_view"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/light_transparent"/>

    </RelativeLayout>

</RelativeLayout>